<% iam_policies_map().each do |name, policy| -%>
resource "aws_iam_policy_attachment" "<%= name %>-attachments" {
    name       = "<%= name %>-attach"
    users      = [<%= policy[:user].collect{|x| "\"#{x}\""}.join(',') %>]
    roles      = [<%= policy[:role].collect{|x| "\"#{x}\""}.join(',') %>]
    groups     = [<%= policy[:group].collect{|x| "\"#{x}\""}.join(',') %>]
    policy_arn = "<%= policy[:policy_arn] %>"
}

<% end -%>
